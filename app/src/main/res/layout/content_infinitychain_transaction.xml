<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".infinitychainTransaction"
    tools:showIn="@layout/activity_infinitychain_transaction">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0">
        <TableRow android:layout_width="wrap_content"
            android:background="@drawable/textfieldbg"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">


                <Switch android:layout_width="wrap_content"
                    android:id="@+id/btswitch"

                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Used Tokens"

                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tokens Balance"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cell Data"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Wallet Balance"
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Paste stellar address to receive cashout"/>
                <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    style="@style/Widget.AppCompat.Button.Colored"
                    android:padding="8dp"
                    android:layout_marginLeft="250dp"
                    android:layout_alignLeft="@+id/imgstellar"
                    android:text="Cashout"/>

                <ImageView android:layout_height="50dp"
                    android:background="@drawable/mmoney"
                    android:id="@+id/imgmmoney"
                    android:layout_width="50dp"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="select network"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="phone number"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="amount"/>


                <ImageView android:layout_height="50dp"
                    android:id="@+id/imgstellar"
                    android:layout_below="@+id/imgmmoney"
                    android:background="@drawable/stellarytib"
                    android:layout_width="50dp"/>
                <TextView android:layout_height="10dp"
                    android:layout_width="wrap_content"
                    android:text="send To"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Address"/>

                <ImageView android:layout_height="50dp"
                    android:background="@drawable/skrill"
                    android:id="@+id/imgskrill"
                    android:layout_below="@+id/imgstellar"
                    android:layout_width="50dp"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="send To Address"/>


            </RelativeLayout>




        </TableRow>


    </TableRow>



</RelativeLayout>